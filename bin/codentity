#!/usr/bin/env node

'use strict';

let program = require('commander');
let CodentityCli = require('../lib/CodentityCli');
let appVersion = require('../package').version;

program
.version(appVersion)
.option('-r, --registry [string]', `Set package registry URL`)
.option('-f, --format [string]', `Provide a summary of your results`)
.option('-d, --directory [string]', `Set the directory you want to analyze`)
.parse(process.argv);

CodentityCli.run(program);
